<%- include('../partials/header'); %>
<h4><%= currentUser   %></h4>
<div class="container">
    <div class="jumbotron mt-3">
        <h1 class="display-5">Welcome To YelpCamp!</h1>
        <p class="lead">View our hand-picked campgrounds from all over the world</p>
        <hr class="my-4">
        <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campground</a>
      </div>      
</div>

<section class="container">
    <div class="row align-items-centre d-flex  text-center" >
     <% for( var i=0; i< campgrounds.length; i++){ %>
        <div class="col-12 col-md-6 col-lg-3" >
            <div class="img-thumbnail mx-1 my-1">
                <img src="<%=campgrounds[i].image%>" alt="" class="img-fluid food">
                <div class="caption">
                    <h4><%=campgrounds[i].name%></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%=campgrounds[i]._id %>" class="btn btn-primary">More Info</a>
                </p>
            </div>
        </div>
   <% } %>
       
    </div>
</section>


<%- include('../partials/footer'); %>
