<%- include('../partials/header'); %>
<div class="container" style="width: 400px;">

    <h3 class="display-5 text-center">Add New Comment to <%= campground.name %></h3>
<form action="/campgrounds/<%= campground._id %>/comments" method="POST">
    <div class="form-group">
      <input type="text" class="form-control" name="comment[text]"  placeholder="text">
    </div>
    <div class="form-group">
      <input type="text" class="form-control" name="comment[author]" placeholder="author" >
    </div>
     
    <div class="form-group">
    <button type="submit" class=" btn btn-primary btn-block">Submit</button>
  </div>

  </form>
  <a href="/campgrounds">Go Back</a>
</div>

<%- include('../partials/footer'); %>
